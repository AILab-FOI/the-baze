' Gambas class file

Inherits SQLiteDB

Public Sub _new(dbfile_ As String)
  Me.dbfile = dbfile_
  
  Me.connection_settings["connection type"] = "SQLiteEmbedded"
  Me.connection_settings["dbfile"] = Me.dbfile
   
End

Public Sub connect(Optional caller As Object = Null)
  ' connect to DB
  With Me.con
    .Type = "sqlite"
    .Name = Me.temporary_folder &/ Me.dbfile
    Try .Open
    If Error Then 
      Error.Propagate()
    End If
  End With
  ' TODO: add this to enable datalog queries 
  
  Me.init_des()
End
