' Gambas class file

Public caller As Object

Public Sub ButtonOK_Click()
  ' store the table name
  If TextBoxModuleName.Text <> "" Then
    caller.module_name = TextBoxModuleName.Text
    Me.Close
  Else
    Message.Info("Please enter a module name!")
  Endif
End

Public Sub ButtonCancel_Click()
  caller.request_canceled = True
  Me.Close
End

Public Sub TextBoxModuleName_KeyPress()
    ' if enter is pressed close the form
  If Key.code = Key.Return Then
    If TextBoxModuleName.Text <> "" Then
      caller.module_name = TextBoxModuleName.Text
      Me.Close
    Else
      Message.Info("Please enter a module name!")
    Endif
  Endif
End
