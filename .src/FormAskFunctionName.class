' Gambas class file

Public caller As Object

Public Sub ButtonOK_Click()
  ' store the table name
  If TextBoxFunctionName.Text <> "" Then
    caller.function_name = TextBoxFunctionName.Text
    Me.Hide
  Else
    Message.Info("Please enter a function name!")
  Endif
End

Public Sub ButtonCancel_Click()
  caller.request_canceled = True
  Me.hide
End

Public Sub TextBoxFunctionName_KeyPress()
    ' if enter is pressed close the form
  If Key.code = Key.Return Then
    If TextBoxFunctionName.Text <> "" Then
      caller.function_name = TextBoxFunctionName.Text
      Me.Hide
    Else
      Message.Info("Please enter a function name!")
    Endif
  Endif
End
