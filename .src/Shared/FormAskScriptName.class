' Gambas class file

Public caller As Object

Public Sub ButtonOK_Click()
  ' store the table name
  If TextBoxScriptName.Text <> "" Then
    caller.script_name = TextBoxScriptName.Text
    caller.script_type = ComboBoxScriptType.Text
    Me.Close
  Else
    Message.Info("Please enter a script name!")
  Endif
End

Public Sub ButtonCancel_Click()
  caller.request_canceled = True
  Me.Close
End

Public Sub TextBoxScriptName_KeyPress()
    ' if enter is pressed close the form
  If Key.code = Key.Return Then
    If TextBoxScriptName.Text <> "" Then
      caller.script_name = TextBoxScriptName.Text
      Me.Close
    Else
      Message.Info("Please enter a script name!")
    Endif
  Endif
End

