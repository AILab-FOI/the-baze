' Gambas class file

Public data_source As DataSource
Public data_table As DataBrowser

Public Sub _new()
  ' make the data source accessable
  data_source = DataSourceTable
  data_table = DataBrowserMain
End

Public Sub VSplitMain_Resize()
  ' arange the table view and the toolbox
  VSplitMain.Height = Me.Height
  PanelToolBox.Width = VSplitMain.Width
  DataBrowserMain.Width = VSplitMain.Width
  DataBrowserMain.Height = VSplitMain.Children[0].Height - PanelToolBox.Height
End


Public Sub Form_Open()
  ' arrange the VSplit
  VSplitMain.Layout = [2, 0]

End

Public Sub ToolButtonClose_Click()
  ' close the current tab
  Dim child As Variant
  With FMain.main_tabstrip.Current
    For Each child In .Children
      child.Close
    Next
    .Delete
  End With
End
