' Gambas class file

Public caller As Object

Public Sub ButtonOK_Click()
  ' store the table name
  If TextBoxDocumentName.Text <> "" Then
    caller.doc_name = TextBoxDocumentName.Text
    Me.Close
  Else
    Message.Info("Please enter a document name!")
  Endif
End

Public Sub ButtonCancel_Click()
  caller.request_canceled = True
  Me.Close
End

Public Sub TextBoxDocumentName_KeyPress()
    ' if enter is pressed close the form
  If Key.code = Key.Return Then
    If TextBoxDocumentName.Text <> "" Then
      caller.doc_name = TextBoxDocumentName.Text
      Me.Close
    Else
      Message.Info("Please enter a document name!")
    Endif
  Endif
End
