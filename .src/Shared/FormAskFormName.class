' Gambas class file

Public caller As Object

Public Sub ButtonOK_Click()
  ' store the table name
  If TextBoxFormName.Text <> "" Then
    caller.form_name = TextBoxFormName.Text
    Me.Close
  Else
    Message.Info("Please enter a form name!")
  Endif
End

Public Sub ButtonCancel_Click()
  caller.request_canceled = True
  Me.Close
End

Public Sub TextBoxFormName_KeyPress()
    ' if enter is pressed close the form
  If Key.code = Key.Return Then
    ButtonOK_Click()
  Endif
End

